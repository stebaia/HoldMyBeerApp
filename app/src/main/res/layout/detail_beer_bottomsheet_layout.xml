<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:clickable="true"
        android:background="@drawable/rounded_fragment_background"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="24dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:text="Tap on beer for detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <ImageView
            android:id="@+id/img_arrow_down"
            android:visibility="gone"
            android:layout_margin="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_round_keyboard_arrow_down_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
    </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_background_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="20dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/img_beer"
                        android:layout_width="200dp"
                        android:layout_height="300dp">
                    </ImageView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_name"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="@color/white"

                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/alcohol_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/txt_abv"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/first_brewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/txt_first_brewed"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/txt_description"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</LinearLayout>