<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:background="@drawable/rounded_background_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_title"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:text="Filter beer!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/start_date"
                    android:textColor="@color/black"
                    android:id="@+id/txt_start"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginLeft="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHint="@color/gray"
                        android:maxLength="2"
                        android:lines="1"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:id="@+id/iet_start_month"
                        android:imeOptions="actionDone"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/type_start_date_month"
                        android:background="@color/white"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:maxLength="4"
                    android:textColorHint="@color/gray"
                    android:lines="1"
                    android:inputType="number"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="12dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:maxLength="4"
                        android:textColorHint="@color/gray"
                        android:lines="1"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:id="@+id/iet_start_year"
                        android:imeOptions="actionDone"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/type_end_date_year"
                        android:background="@color/white"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/end_date"
                    android:textColor="@color/black"
                    android:id="@+id/txt_end"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginLeft="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHint="@color/gray"
                        android:maxLength="2"
                        android:lines="1"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:id="@+id/iet_end_month"
                        android:imeOptions="actionDone"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/type_start_date_month"
                        android:background="@color/white"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="12dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:textColorHint="@color/gray"
                        android:maxLength="4"
                        android:lines="1"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:id="@+id/iet_end_year"
                        android:imeOptions="actionDone"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/type_end_date_year"
                        android:background="@color/white"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <RelativeLayout

                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btn_filter"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:letterSpacing="0.09"
                    android:lineSpacingExtra="5sp"
                    android:textAllCaps="true"
                    android:text="@string/filter"
                    android:background="@drawable/rounded_background_button_orange"
                    android:layout_width="114dp"
                    android:layout_height="44dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>